<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quiz.pavel.quiz" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver
            android:name="com.quiz.pavel.quiz.Gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >


            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.quiz.pavel.quiz" />
            </intent-filter>
        </receiver>

        <service android:name="com.quiz.pavel.quiz.Gcm.GcmIntentService" />

        <activity android:name=".controller.ChoiceSignUpLogIn"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.vk.sdk.VKOpenAuthActivity" />

        <activity android:name=".controller.SignUpActivity" >
        </activity>

        <activity android:name=".controller.SingleFragmentActivity" >
        </activity>

        <activity android:name=".controller.PreGameActivity" >
        </activity>

        <activity android:name=".controller.PostGameActivity" >
        </activity>

        <activity android:name=".controller.LogInActivity" >
        </activity>

        <activity android:name=".controller.ProfileActivity" >
        </activity>

        <activity android:name=".controller.ListsActivity" >
        </activity>

        <activity
            android:name=".controller.RatingActivity"
            android:label="@string/title_activity_rating" >
        </activity>

        <activity
            android:name=".controller.RRatingActivity">
        </activity>

        <activity android:name=".controller.MainTabsActivity" >
        </activity>

        <activity android:name=".controller.ListFriendRequestsActivity" >
        </activity>

        <activity
            android:name=".controller.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name=".controller.ChoiceCatOrTopicActivity"
            android:label="@string/title_activity_choice_cat_or_topic" >
        </activity>



        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
